{
  "name": "xbt",
  "version": "1.0.0",
  "description": "Technology-agnostic incremental build tool for mono- and multi-repos",
  "license": "MIT",
  "bin": {
    "xbt": "dist/src/main.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && tsc -p tsconfig.build.json && yarn copy",
    "copy": "yarn copyfiles ./src/assets/* ./dist",
    "xbt": "node dist/src/main.js",
    "dev": "yarn build && yarn xbt",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^6.1.1",
    "@nestjs/core": "^6.1.1",
    "@thi.ng/dgraph": "^1.1.8",
    "chalk": "^2.4.2",
    "commander": "^2.20.0",
    "debug": "^4.1.1",
    "glob": "^7.1.3",
    "handlebars": "^4.3.0",
    "isomorphic-git": "^0.54.2",
    "lodash": "^4.17.11",
    "node-emoji": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.1",
    "supports-color": "^6.1.0",
    "yaml": "^1.5.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.1.1",
    "@types/debug": "^4.1.4",
    "@types/glob": "^7.1.1",
    "@types/jest": "^24.0.12",
    "@types/lodash": "^4.14.123",
    "@types/node": "^11.13.8",
    "@types/yaml": "^1.0.2",
    "copyfiles": "^2.1.0",
    "jest": "^24.7.1",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "5.16.0",
    "typescript": "^3.4.5"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "."
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
